@model Events.Web.Models.RegisterViewModel
@{
       Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>CUT Events</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="images/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/logincss/bootstrap.min.css">
    <!--===============================================================================================-->
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/logincss/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/logincss/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/logincss/util.css">
    <link rel="stylesheet" type="text/css" href="~/Content/logincss/main.css">
    <!--===============================================================================================-->
</head>
<body>

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <div class="login100-pic js-tilt" data-tilt>
                    <img src="~/Content/cutLogo2.jpg" alt="IMG">
                </div>


                <section id="loginForm">
                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <h4>Admin registration</h4>
                    <hr />
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email, new { @class = "col-md-6 control-label" })
                        <div class="col-md-10">
                            <input type="email" placeholder="Enter Email" required
                                   @Html.TextBoxFor(m => m.Email, new { @class = "form-control col-md-40" })
                                   @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                                    <div class="col-md-10">
                                        <input type="password" placeholder="Enter Password" required
                                               @Html.PasswordFor(m => m.Password, new { @class = "form-control col-md-40" })
                                               @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-auto control-label" })
                                    <div class="col-md-10">
                                        <input type="password" placeholder="Confirm password" required
                                               @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control col-md-auto" })
                                               @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.FullName, new { @class = "col-md-auto control-label" })
                                    <div class="col-md-10">
                                        <input placeholder="Enter Full name" required
                                               @Html.TextBoxFor(m => m.FullName, new { @class = "form-control col-md-auto" })
                                               @Html.ValidationMessageFor(m => m.FullName, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" class="btn btn-default" value="Register" />
                                    </div>
                                </div>
                                <p>
                                    @Html.ActionLink("Login as Registered Admin", "Homepage")
                                </p>
                }<!--end of the registration form-->

                </section>
            </div>
        </div>
    </div>

    <!--===============================================================================================-->
    <script src="~/Scripts/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Scripts/js/popper.js"></script>
    <script src="~/Scripts/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/tilt/tilt.jquery.min.js"></script>
    <script>
        $('.js-tilt').tilt({
            scale: 1.1
        })
    </script>
    <!--===============================================================================================-->
    <!--===============================================================================================-->
    <script src="~/Scripts/js/main.js"></script>


</body>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
